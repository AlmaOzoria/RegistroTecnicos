@page "/Prioridad/Details"
@page "/Prioridad/Details/{PrioridadesId:int}"
@inject PrioridadesServices prioridadesServices
@inject NavigationManager navigationManager
@rendermode InteractiveServer

<PageTitle>Detalles de la Prioridad</PageTitle>
@if (Prioridades != null)
{
    <div class="container">
        <div class="card shadow-header">
            <div class="card-header  bg-primary text-white text-center py-2 rounded">
                <h3 class="text-center"><strong>Detalles de la Prioridad</strong></h3>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-md-6">

                        <div class="card-body">
                            <ul class="list-unstyled">
                                <li><strong>PrioridadesId:</strong> @Prioridades.PrioridadesId</li>
                                <li><strong>Descripcion:</strong> @Prioridades.Descripcion</li>
                                <li><strong>Tiempo:</strong> @Prioridades.Tiempo</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button type="button" class="btn btn-outline-primary" @onclick="Volver"><i class="bi bi-box-arrow-left"></i> Volver</button>
            </div>
        </div>
    </div>
}
else
{
    <p>Prioridad no encontrada.</p>
}


@code {
    [Parameter]
    public int PrioridadesId { get; set; }
    public Prioridades? Prioridades { get; set; } = new Prioridades();

    protected override async Task OnInitializedAsync()
    {
        Prioridades = await prioridadesServices.Buscar(PrioridadesId);
    }

    public void Volver()
    {
        navigationManager.NavigateTo("/Prioridad/Index");
    }

}
